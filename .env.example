# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Database Configuration
# PostgreSQL (required - use Prisma Postgres or any PostgreSQL provider)
DATABASE_URL="postgresql://user:password@host:5432/epicgpt?schema=public"

# For local development with SQLite, copy prisma/schema.dev.prisma to prisma/schema.prisma
# and use: DATABASE_URL="file:./dev.db"

# Web Search (Serper.dev)
SERPER_API_KEY=your_serper_api_key

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Birdeye API
BIRDEYE_API_KEY=your_birdeye_api_key

# Optional: Admin Role Override (defaults to "Manage Guild" permission)
# ADMIN_ROLE_ID=your_admin_role_id

# Environment
NODE_ENV=development
